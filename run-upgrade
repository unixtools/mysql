#!/bin/sh 

PATH=/local/mysql/server/bin:/usr/bin:$PATH

rm -f /tmp/mysql.sock
ln -s /var/lib/mysql/mysql.sock /tmp/

rm -f /usr/local/mysql
ln -s /local/mysql/server /usr/local/mysql

rm /local/mysql/data/mysql_upgrade.info

cd /local/mysql/server
mysql_upgrade --datadir=/local/mysql/data 

rm -f /usr/local/mysql
rm -f /tmp/mysql.sock
